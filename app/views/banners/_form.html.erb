<%= form_for @banner do |f| %>
  <% if @banner.errors.any? %>
    <% @banner.errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :shorttitle %>
  <%= f.text_field :shorttitle %>
  <%= f.label :photo %>
  <%= f.file_field :photo %>
  <%= f.hidden_field :photo_cache %>
  <% if @banner.photo.present? %>

    <p><b>Current Photo</b><br>
    <%= image_tag @banner.photo_url(:thumb), style: "display:block" %>
    </p>
  <% end %>
  <%= f.label :link %>
  <%= f.text_field :link %>
  <%= f.label :position %>
  <%= f.number_field :position %>
  <%= f.submit %>
<% end %>
