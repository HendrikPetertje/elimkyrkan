      <% if user_signed_in? %>
        <div class="sideitem boxitem">
          <%= link_to 'Ny sidebarwidget', new_sidebarwidget_path %>
        </div>
        <br>
      <% end %>
      <% @sidebarwidgets.each do |widget| %><div class="responisvesideitem"><div class="sideitem boxitem">
          <h3><%= widget.title %></h3>
          <%= widget.content.html_safe %>
          <% if user_signed_in? %>
            <br>
            <%= link_to '채ndra', edit_sidebarwidget_path(widget) %>
            |
            <%= link_to 'ta bort', sidebarwidget_path(widget), method: 'delete' %>
            |
            <%= form_for widget, html: { class: 'inlineblock' } do |f| %>
              <%= f.label :position %>
              <%= f.number_field :position, style: 'width: 30px' %>
            <% end %>
          <% end %>
        </div>
      </div><% end %>
      <!-- Like  us on facebook -->
      <div class="responisvesideitem">
        <div class="boxitem sideitem">
          <h3 style="margin-bottom: 10px;">Gilla oss p책 Facebook</h3>
          <div class="fb-like-box" data-href="https://www.facebook.com/pages/Elimkyrkan-Sundsvall/376163675824069?fref=ts" data-width="230" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>
        </div>
      </div>
    </aside>
  </div>
  <div class="cleardiv"></div>
</div>

