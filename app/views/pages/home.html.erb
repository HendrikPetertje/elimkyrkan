<% title @title %>
<div class="responsivecontent">
  <div class="responsivemaincontent">
    <div class="maincontent boxitem">
      <%= @pagecontent.content.html_safe %>
      <% if user_signed_in? %>
        <%= link_to 'ändra', edit_page_path(@pagecontent), style: 'display:block' %>
      <% end %>
    </div>
  </div><div class="responsivesidecontent">
    <aside class="sidecontent">
      <% if user_signed_in? %>
        <div class="sideitem boxitem">
          <%= link_to 'Ny sidebarwidget', new_sidebarwidget_path %>
        </div>
        <br>
      <% end %>
      <% @sidebarwidgets.each do |widget| %><div class="responisvesideitem"><div class="sideitem boxitem">
          <h3><%= widget.title %></h3>
          <%= widget.content.html_safe %>
          <% if user_signed_in? %>
            <br>
            <%= link_to 'ändra', edit_sidebarwidget_path(widget) %>
            |
            <%= link_to 'ta bort', sidebarwidget_path(widget), method: 'delete' %>
            |
            <%= form_for widget, html: { class: 'inlineblock' } do |f| %>
              <%= f.label :position %>
              <%= f.number_field :position, style: 'width: 30px' %>
            <% end %>
          <% end %>
        </div>
      </div><% end %>
      </aside>
  </div>
  <div class="cleardiv"></div>
</div>

