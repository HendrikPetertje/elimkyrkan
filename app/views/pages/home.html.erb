<% title @title %>
<div class="responsivecontent">
  <div class="responsivemaincontent">
    <div class="maincontent boxitem">
      <%= @pagecontent.content.html_safe %>
      <% if user_signed_in? %>
        <%= link_to '채ndra', edit_page_path(@pagecontent), style: 'display:block' %>
      <% end %>
      <br>
      <div class="socialmaincontent">
        <ul class="share-buttons">
          <li><a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" title="Share on Facebook" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&t=' + encodeURIComponent(document.URL)); return false;"><%= image_tag("application/social/Facebook.png") %></a></li>
          <li><a href="https://twitter.com/intent/tweet?source=<%= request.original_url %>&text=:<%= request.original_url %>" target="_blank" title="Tweet" onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL)); return false;"><%= image_tag("application/social/Twitter.png") %></a></li>
          <li><a href="https://plus.google.com/share?url=<%= request.original_url %>" target="_blank" title="Share on Google+" onclick="window.open('https://plus.google.com/share?url=' + encodeURIComponent(document.URL)); return false;"><%= image_tag("application/social/Google+.png") %></a></li>
          <li><a href="mailto:?subject=&body=:<%= request.original_url %>" target="_blank" title="Email" onclick="window.open('mailto:?subject=' + encodeURIComponent(document.title) + '&body=' +  encodeURIComponent(document.URL)); return false;"><%= image_tag("application/social/Email.png") %></a></li>
        </ul>

      </div>

    </div>
  </div><div class="responsivesidecontent">
    <aside class="sidecontent">
      <!-- calendar -->
      <div class="calendar sidebarcalendar boxitem"><div class="calheader">
